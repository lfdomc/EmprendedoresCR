# SEO Configuration
# Copiar este archivo como .env.local y completar con los valores reales

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Search Console
GOOGLE_SITE_VERIFICATION=your-google-verification-code

# Bing Webmaster Tools
BING_SITE_VERIFICATION=your-bing-verification-code

# Yandex Webmaster
YANDEX_SITE_VERIFICATION=your-yandex-verification-code

# Facebook App ID (para Open Graph)
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# Twitter/X Handle
NEXT_PUBLIC_TWITTER_HANDLE=@costaricaemprende

# Domain Configuration
NEXT_PUBLIC_DOMAIN=costaricaemprende.com
NEXT_PUBLIC_SITE_URL=https://costaricaemprende.com

# Business Information
BUSINESS_NAME="Costa Rica Emprende"
BUSINESS_DESCRIPTION="Marketplace de emprendimientos locales en Costa Rica"
BUSINESS_EMAIL=info@costaricaemprende.com
BUSINESS_PHONE=+506-XXXX-XXXX

# Social Media Links
SOCIAL_FACEBOOK=https://www.facebook.com/costaricaemprende
SOCIAL_INSTAGRAM=https://www.instagram.com/costaricaemprende
SOCIAL_TWITTER=https://twitter.com/costaricaemprende
SOCIAL_LINKEDIN=https://www.linkedin.com/company/costaricaemprende

# Schema.org Configuration
ORGANIZATION_TYPE=Organization
ORGANIZATION_LOGO_URL=/logo.png
ORGANIZATION_ADDRESS_LOCALITY=San José
ORGANIZATION_ADDRESS_REGION=San José
ORGANIZATION_ADDRESS_COUNTRY=CR
ORGANIZATION_POSTAL_CODE=10101

# WhatsApp Configuration
WHATSAPP_BUSINESS_NUMBER=+506XXXXXXXX
WHATSAPP_BUSINESS_MESSAGE="Hola, me interesa conocer más sobre Costa Rica Emprende"

# Additional SEO Settings
DEFAULT_LOCALE=es_CR
ALTERNATE_LOCALES=en_US,es_ES
SITE_THEME_COLOR=#fbbf24
SITE_BACKGROUND_COLOR=#ffffff

# Performance and Caching
IMAGE_OPTIMIZATION=true
CACHE_CONTROL_MAX_AGE=31536000
STATIC_EXPORT=false

# Monitoring and Analytics
HOTJAR_ID=your-hotjar-id
CLARITY_ID=your-microsoft-clarity-id
GTM_ID=GTM-XXXXXXX

# Search Configuration
SEARCH_ENGINE_INDEXING=true
SITEMAP_GENERATION=true
ROBOTS_TXT_GENERATION=true

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# GDPR and Privacy
COOKIE_CONSENT_REQUIRED=true
PRIVACY_POLICY_URL=/privacy-policy
TERMS_OF_SERVICE_URL=/terms-of-service